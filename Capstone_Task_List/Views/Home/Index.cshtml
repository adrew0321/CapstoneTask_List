@{
    ViewBag.Title = "Home Page";
}
<br />
<h2>Task List Viewer</h2>
<br />
<table border="1" class="table">
	<tr>
		<th>Task Id</th>
		<th>Description</th>
		<th>Due Date</th>
		<th>Task Complete</th>
	</tr>
	@foreach(var task in ViewBag.Task)
	{
	<tr>
		<td>@task.Task_ID</td>
		<td>@task.Description</td>
		<td>@task.Due_Date.ToShortDateString()</td>
		<td>@task.Task_Complete</td>
		<td><a href="/Home/TaskComplete?Task_ID=@task.Task_ID" class="btn btn-primary" role="button">Mark As Completed</a></td>
		<td><a href="/Home/DeleteTask?Task_ID=@task.Task_ID" class="btn btn-danger" role="button" onclick="return confirm('Are you sure you want to delete the selected Task?')">Delete Task</a></td>
	</tr>
	}

</table>